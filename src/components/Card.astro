---
interface Props {
  imageUrl: string;
  title: string;
  excerpt: string;
  date: string;
  slug: string;
}

const { slug, excerpt, imageUrl, title } = Astro.props;
---

<a href={`/blog/${slug}`}>
  <div
    class="min-h-[200px] max-h-[20vh] cursor-pointer transition-all image-full card bg-gradient-to-r from-slate-400 to-slate-500 shadow-xl hover:scale-105 hover:shadow-2xl active:scale-100"
  >
    {
      imageUrl !== null && (
        <figure>
          <img src={imageUrl} class="w-full" alt="article image" />
        </figure>
      )
    }
    <div class="card-body">
      <h2 class="card-title">{title}</h2>
      <p>{excerpt}</p>
    </div>
  </div></a
>
