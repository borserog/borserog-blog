---
import { Image, type AstroAssets } from "astro:assets";
import type { CollectionEntry } from "astro:content";
interface Props {
  post: CollectionEntry<"posts">;
}
const { post } = Astro.props;
---

<a href={`/blog/${post.slug}`}>
  <div
    class="w-full min-h-[200px] max-h-[20vh] cursor-pointer transition-all image-full card shadow-xl hover:scale-105 hover:shadow-2xl active:scale-100"
  >
    <figure>
      <img
        src={`src/content/posts/images/${post.data.images.cover}`}
        class="w-full"
        alt="article image"
      />
    </figure>
    <div class="card-body">
      <h2 class="card-title">{[post.data.title]}</h2>
      <p>{post.data.excerpt}</p>
    </div>
  </div>
</a>
