---
import Icon from "astro-icon";
import { ThemeToggle } from "../components/ThemeToggle";
import { HomeIcon } from "../components/HomeIcon";

const currentPage = Astro.url.pathname;
---

<header class="flex flex-row justify-center bg-base-200 md:px-10">
  <div class="navbar justify-between max-w-[945px]">
    <a class={`btn btn-ghost ${currentPage === "/" && "btn-active"}`} href="/">
      <HomeIcon client:only />
    </a>

    <nav class="flex-none gap-6 pr-2">
      <a
        class={`btn btn-ghost ${currentPage == "/blog" && "btn-active"}`}
        href="/blog">Blog</a
      >
      <div class="flex flex-row gap-3">
        <a target="_blank" href="https://www.linkedin.com/in/borserog/
        ">
          <Icon class="w-10 h-10" name="mdi:linkedin" />
        </a>
        <a target="_blank" href="https://github.com/borserog
        ">
          <Icon class="w-10 h-10" name="mdi:github" />
        </a>
      </div>

      <ThemeToggle client:only />
    </nav>
  </div>
</header>
